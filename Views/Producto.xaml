<Window x:Class="GestiondeVentaZamira.Views.Producto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Producto" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center" >
        <Label Content="📦 Agregar Producto" FontSize="18" FontWeight="Bold" Foreground="Blue" HorizontalAlignment="Center" />

        <TextBox x:Name="NombreProductoTextBox" Margin="0,10,0,0" Width="360" Height="30" 
                 ToolTip="Nombre del producto" />
        <TextBox x:Name="PrecioProductoTextBox" Margin="0,10,0,0" Width="360" Height="30" 
                 ToolTip="Precio" />
        <TextBox x:Name="DescripcionProductoTextBox" Margin="0,10,0,0" Width="360" Height="70" 
                 AcceptsReturn="True" TextWrapping="Wrap" ToolTip="Descripción" />

        <Button Content="Guardar Producto" Margin="0,20,0,0" Width="150" Height="35" HorizontalAlignment="Center"
                Click="GuardarProducto_Click" />
    </StackPanel>
</Window>



