<Window x:Class="GestiondeVentaZamira.Views.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin" Height="Auto" Width="Auto" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>

            <!-- Título -->
            <TextBlock Style="{StaticResource TextAzul}" Text="👑 Admin"
                       FontSize="20" FontWeight="Bold"
                       Margin="0 0 0 10" />

            <!-- Campos de entrada -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left">

                <StackPanel>
                    <TextBlock Text="ID del usuario"
                               FontWeight="Normal"
                               Margin="0,0,0,2"/>
                    <TextBox x:Name="campoId"
                             Width="100"
                             ToolTip="ID del usuario"/>
                </StackPanel>

                <StackPanel Margin="10,0,10,0">
                    <TextBlock Text="Nombre del usuario"
                               FontWeight="Normal"
                               Margin="0,0,0,2"/>
                    <TextBox x:Name="campoNombre"
                             Width="200"
                             ToolTip="Nombre del usuario"/>
                </StackPanel>

                <Button x:Name="btnAgregar"
                        Content="Agregar"
                        Width="160"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource ButtonStyle}"
                        Click="btnAgregar_Click" />
            </StackPanel>

            <!-- Tabla de usuarios -->
            <DataGrid x:Name="tablaUsuarios"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding IdUsuario}" Width="100"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>



