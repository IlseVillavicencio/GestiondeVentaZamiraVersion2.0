<Window x:Class="GestiondeVentaZamira.Views.Soporte"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Soporte" Height="400" Width="650" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" >

            <TextBlock Text="🛠 Centro de Soporte" FontSize="20" FontWeight="Bold" Foreground="Blue" Margin="0,0,0,10" />

            <TextBox Name="BuscarTextBox" Width="600" Height="25" Margin="0,0,0,10" />

            <ListView Name="ListaTicketsListView" Width="600" Height="200" Margin="0,0,0,10" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Width="600" >
                <Button Name="NuevoTicketButton" Content="Nuevo Ticket" Width="120" Margin="0,0,10,0" Click="NuevoTicketButton_Click" />
                <Button Name="VerDetallesButton" Content="Ver Detalles" Width="120" Click="VerDetallesButton_Click" />
            </StackPanel>

        </StackPanel>
    </ScrollViewer>

</Window>




