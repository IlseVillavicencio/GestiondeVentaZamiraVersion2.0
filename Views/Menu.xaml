<Window x:Class="GestiondeVentaZamira.Views.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menú Principal" Height="Auto" Width="Auto">

    <Window.Resources>
        <!-- Estilo base común para todos los botones del menú -->
        <Style x:Key="BaseMenuButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilos con colores personalizados -->
        <Style x:Key="ButtonStyle" BasedOn="{StaticResource BaseMenuButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#AF98D0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF99CCFF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF66B2FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        
    </Window.Resources>

    <DockPanel>
        <!-- Menú superior con botones -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#EEE" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="📦 Pedido" Style="{StaticResource ButtonStyle}" Click="IrAPedido_Click"/>
            <Button Content="🛒 Productos" Style="{StaticResource ButtonStyle}" Click="IrAProducto_Click"/>
            <Button Content="📦 Inventario" Style="{StaticResource ButtonStyle}" Click="IrAInventario_Click"/>
            <Button Content="💰 Facturación" Style="{StaticResource ButtonStyle}" Click="IrANotificaciones_Click"/>
            <Button Content="🛠 Soporte" Style="{StaticResource ButtonStyle}" Click="IrASoporte_Click"/>
            <Button Content="🚚 Logística" Style="{StaticResource ButtonStyle}" Click="IrALogistica_Click"/>
            <Button Content="👑 Admin" Style="{StaticResource ButtonStyle}" Click="IrAAdmin_Click"/>
        </StackPanel>

        <!-- ContentControl para cargar vistas dinámicas -->
        <ContentControl x:Name="contenidoContentControl" />
    </DockPanel>
</Window>



