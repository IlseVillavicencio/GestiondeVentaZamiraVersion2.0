<Window x:Class="GestiondeVentaZamira.Views.Inventario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inventario" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    
        <Grid Margin="10">

        <StackPanel>
            <TextBlock Style="{StaticResource TextLila}" Text="📦 Inventario"
   FontSize="20" FontWeight="Bold"
   Margin="0 0 0 10" />
        
        <DataGrid x:Name="inventarioDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  CellEditEnding="InventarioDataGrid_CellEditEnding">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Producto"
                                    Binding="{Binding NombreProducto}"
                                    IsReadOnly="True"
                                    Width="*"/>
                <DataGridTextColumn Header="Stock"
                                    Binding="{Binding StockActual, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Width="100" />
            </DataGrid.Columns>
        </DataGrid>
        </StackPanel>
    </Grid>
</Window>


